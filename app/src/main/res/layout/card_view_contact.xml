<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_contact"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardPreventCornerOverlap="false"
    cardView:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentEnd="true"
            android:id="@+id/image_cardView_contact"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_forward"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/title_cardView_contact"
            android:textColor="#2d2d2d"
            android:padding="4dp"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@id/image_cardView_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anti-Ragging Committee" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

